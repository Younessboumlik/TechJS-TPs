doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Register
    script(src="https://cdn.tailwindcss.com")
  body(class="bg-gray-100 flex items-center justify-center h-screen")
    form(class="bg-white p-8 rounded-lg shadow-md w-80" method="POST" action="/register")
      h1(class="text-2xl font-bold mb-6 text-center") Register
      if error
        p(class="text-red-500 text-sm mb-4") #{error}
      input(type="text" name="username" placeholder="Username" class="border p-2 w-full mb-4 rounded")
      input(type="password" name="password" placeholder="Password" class="border p-2 w-full mb-4 rounded")
      button(type="submit" class="bg-blue-500 hover:bg-blue-600 text-white p-2 rounded w-full font-semibold") Register
      p(class="text-center text-gray-500 text-sm mt-4") Already have an account? 
        a(href="/login" class="text-blue-500 hover:underline") Login
